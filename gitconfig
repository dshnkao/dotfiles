[user]
    email = dshnkao@gmail.com
    name = Dennis Kao

[alias]
    hist = log --pretty=format:\"%C(yellow)%h%C(reset) %C(green)%ad%C(reset) %C(red)|%C(reset) %s %C(bold blue)[%an]%C(reset)%C(yellow)%d%C(reset)\" --graph --date=short

    stash-all = stash save --include-untracked
    force = push --force-with-lease
    co = checkout
    amend = commit --amend
    ca = commit -a
    c = commit
    diffc = diff --cached

[log]
    decorate = full

[merge]
    ff = only
    conflictstyle = diff3

[pull]
    ff = only

[push]
    default = simple

[gpg]
    program = gpg2

[commit]
    gpgSign = true

[status]
    showUntrackedFiles = all

[core]
    excludesfile = ~/.global-gitignore

[diff]
    tool = icdiff
[difftool]
    prompt = false
[difftool "icdiff"]
    cmd = icdiff --line-numbers $LOCAL $REMOTE | less -R
