[user]
    email = dshnkao@gmail.com
    name = Dennis Kao

[alias]
    amend = commit --amend
    c = commit
    ca = commit -a
    co = checkout
    cob = !git checkout $(git branch --all --verbose | fzf | tr -s ' ' | cut -d' ' -f2 | sed s/remotes.origin.//)
    diffc = diff --cached
    force = push --force-with-lease
    hist = log --pretty=format:\"%C(yellow)%h%C(reset) %C(green)%ad%C(reset) %C(red)|%C(reset) %s %C(bold blue)[%an]%C(reset)%C(yellow)%d%C(reset)\" --graph --date=short
    stash-all = stash save --include-untracked
    signoff = !git pull && git add . && git commit -m 'signoff' && git push

[log]
    decorate = full

[merge]
    ff = only
    conflictstyle = diff3

[pull]
    ff = only

[push]
    default = simple

[gpg]
    program = gpg

[commit]
    gpgSign = true

[status]
    showUntrackedFiles = all

[core]
    excludesfile = ~/.global-gitignore
